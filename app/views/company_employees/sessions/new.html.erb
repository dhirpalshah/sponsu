<div class="h-screen bg-cover bg-no-repeat flex flex-col justify-center items-center">
  <a href="/" class="absolute top-0 left-0 mt-4 ml-4 px-2 py-1 text-black rounded-lg hover:bg-gray-200"> <- Back </a>
  <h2 class="text-3xl font-bold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-xs" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", class: "w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
