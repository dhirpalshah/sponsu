        <%#= f.label :grade %>
        <%#= f.check_box :grade %>
<!---->
        <%#= f.submit %>
<!--      </div>-->
    <%# end %>


    <table> 
      <tbody> 
        <% @students.each do |student| %>
          <tr> 
            <td><%= student.name %></td>
            <!--<td><%#= student.university%></td>--> 
            <!-- Have to configure Univeristy and Major with their tables --> 
            
            <td><%= student.graduating_year %></td>
            <td><%= student.bio %></td>
            <td><%= student.email %></td>
          </tr> 
        <% end %> 
      </tbody>
    </table> 
    <p>This is the dashboard content for company employees.</p>
  </main>

  <footer>
    <!-- Add footer content if needed -->
  </footer>

