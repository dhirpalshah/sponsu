<body>

  <header>
    <h1>Welcome to the Company Employee Dashboard</h1>
  </header>

  <nav>
    <ul>
      <li><%= link_to 'Profile', edit_company_employee_registration_path %></li>
      <li><%= link_to 'Logout', destroy_company_employee_session_path, method: :delete %></li>
