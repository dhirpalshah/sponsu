  </nav>

  <main>
    <!-- Your main content goes here -->
    <h1> Student Prospects </h1> 
    <%#= form_with(url: company_employees_login_path, method: :get) do |f| %>
<!--      <div>
        <strong>Choose Columns to Filter:</strong>
