<div>
  <div>
    <h1>
      List of all ethnicities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new ethnicity
    </h2>

    <form action="/insert_ethnicity" method="post">
      <div>
        <label for="ethnicity_name_box">
          Ethnicity name
        </label>

        <input type="text" id="ethnicity_name_box" name="query_ethnicity_name">
      </div>

      <div>
        <label for="student_to_ethnicities_count_box">
          Student to ethnicities count
        </label>

        <input type="text" id="student_to_ethnicities_count_box" name="query_student_to_ethnicities_count">
      </div>

      <button>
        Create ethnicity
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Ethnicity name
        </th>

        <th>
          Student to ethnicities count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_ethnicities.each do |an_ethnicity| %>
      <tr>
        <td>
          <%= an_ethnicity.id %>
        </td>

        <td>
          <%= an_ethnicity.ethnicity_name %>
        </td>

        <td>
          <%= an_ethnicity.student_to_ethnicities_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_ethnicity.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_ethnicity.updated_at) %> ago
        </td>

        <td>
          <a href="/ethnicities/<%= an_ethnicity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
