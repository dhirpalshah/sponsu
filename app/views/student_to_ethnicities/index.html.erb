<div>
  <div>
    <h1>
      List of all student to ethnicities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new student to ethnicity
    </h2>

    <form action="/insert_student_to_ethnicity" method="post">
      <div>
        <label for="student_id_box">
          Student
        </label>

        <input type="text" id="student_id_box" name="query_student_id">
      </div>

      <div>
        <label for="ethnicity_id_box">
          Ethnicity
        </label>

        <input type="text" id="ethnicity_id_box" name="query_ethnicity_id">
      </div>

      <button>
        Create student to ethnicity
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Student
        </th>

        <th>
          Ethnicity
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_student_to_ethnicities.each do |a_student_to_ethnicity| %>
      <tr>
        <td>
          <%= a_student_to_ethnicity.id %>
        </td>

        <td>
          <%= a_student_to_ethnicity.student_id %>
        </td>

        <td>
          <%= a_student_to_ethnicity.ethnicity_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_student_to_ethnicity.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_student_to_ethnicity.updated_at) %> ago
        </td>

        <td>
          <a href="/student_to_ethnicities/<%= a_student_to_ethnicity.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
