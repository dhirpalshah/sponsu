<div>
  <div>
    <h1>
      List of all companies
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new company
    </h2>

    <form action="/insert_company" method="post">
      <div>
        <label for="company_name_box">
          Company name
        </label>

        <input type="text" id="company_name_box" name="query_company_name">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="sector_box">
          Sector
        </label>

        <input type="text" id="sector_box" name="query_sector">
      </div>

      <div>
        <label for="num_employees_box">
          Num employees
        </label>

        <input type="text" id="num_employees_box" name="query_num_employees">
      </div>

      <div>
        <label for="company_employees_count_box">
          Company employees count
        </label>

        <input type="text" id="company_employees_count_box" name="query_company_employees_count">
      </div>

      <button>
        Create company
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Company name
        </th>

        <th>
          Location
        </th>

        <th>
          Sector
        </th>

        <th>
          Num employees
        </th>

        <th>
          Company employees count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_companies.each do |a_company| %>
      <tr>
        <td>
          <%= a_company.id %>
        </td>

        <td>
          <%= a_company.company_name %>
        </td>

        <td>
          <%= a_company.location %>
        </td>

        <td>
          <%= a_company.sector %>
        </td>

        <td>
          <%= a_company.num_employees %>
        </td>

        <td>
          <%= a_company.company_employees_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_company.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_company.updated_at) %> ago
        </td>

        <td>
          <a href="/companies/<%= a_company.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
